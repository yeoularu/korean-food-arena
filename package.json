{
  "name": "korean-food-arena",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "lint": "eslint .",
    "check": "tsc && vite build && wrangler deploy --dry-run",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply korean-food-arena-d1 --local",
    "db:studio:prod": "drizzle-kit studio",
    "cf-typegen": "wrangler types",
    "auth:generate": "pnpx @better-auth/cli@latest generate --output='src/worker/db/auth-schema.ts'"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toggle": "^1.1.10",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-devtools": "^0.4.0",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@tanstack/react-router": "^1.131.16",
    "@tanstack/react-router-devtools": "^1.131.16",
    "better-auth": "^1.3.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "hono": "4.9.2",
    "lucide-react": "^0.539.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "1.11.5",
    "@eslint/js": "9.33.0",
    "@tanstack/eslint-plugin-query": "^5.83.1",
    "@tanstack/eslint-plugin-router": "^1.131.2",
    "@tanstack/router-plugin": "^1.131.16",
    "@types/node": "24.3.0",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "5.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "9.33.0",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "16.3.0",
    "prettier": "^3.6.2",
    "tw-animate-css": "^1.3.6",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.1",
